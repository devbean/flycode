<idea-plugin>
    <id>org.galaxyworld.flycode</id>
    <name>flycode</name>
    <vendor email="support@galaxyworld.org" url="http://www.galaxyworld.org">GalaxyWorld</vendor>

    <description><![CDATA[
      Plugin used for generating code from database schema and Java code.
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.database</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <group id="FlyCodePlugin.DataSourceMenu" text="FlyCode" popup="true">
            <add-to-group group-id="DatabaseViewPopupMenu" relative-to-action="DatabaseView.ToolsPopup" anchor="before" />
            <action id="org.galaxyworld.flycode.action.HelloAction" class="org.galaxyworld.flycode.action.HelloAction"
                    text="Java" description="Generate Java entities, controllers and services from database tables.">
            </action>
        </group>
    </actions>
</idea-plugin>
